modules = ["nodejs-20", "web", "python-3.11"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Shell 2 - AI Agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Shell 3 - Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Shell 1 - Token Server"

[[workflows.workflow]]
name = "Shell 2 - AI Agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python agent_telugu.py dev"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Shell 3 - Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && python -m http.server 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Shell 1 - Token Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uvicorn server:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 37759
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "cd backend && uvicorn server:app --host 0.0.0.0 --port 5000 & cd ../frontend && npm run start -- --port 3000 --hostname 0.0.0.0 & wait"]
build = ["bash", "-c", "cd frontend && npm install && npm run build"]
